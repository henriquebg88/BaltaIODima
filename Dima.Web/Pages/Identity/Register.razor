@page "/registrar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Dima - Registrar</PageTitle>

<h1>Registrar</h1>

<MudGrid Justify="Justify.Center">
    <MudItem sm="12" md="8" lg="6">
        <MudPaper Class="mud-width-full px-8 py-6">
            <div class="d-flex justify-center py-6">
                <img 
                    src="imgs/dima.png"
                    width="150" />

            </div>
            
            <EditForm Model="@RegisterRequest" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
                

                <MudTextField 
                    Label="E-mail"
                    T="string"
                    InputType="InputType.Email"
                    Required="true"
                    RequiredError="Informe o E-mail"
                    Validation="@( new EmailAddressAttribute{ErrorMessage = "E-mail inválido"} )"
                    @bind-Value="RegisterRequest.Email"
                    For="@(() => RegisterRequest.Email)"
                />
                <MudTextField 
                    Label="Senha"
                    T="string"
                    InputType="InputType.Password"
                    Required="true"
                    RequiredError="=Informe a senha"
                    @bind-Value="RegisterRequest.Password"
                    For="@(() => RegisterRequest.Password)"
                    
                />

                <div class="d-flex mt-8" style="justify-content: space-between;">
                    @if(isBusy){
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }else{
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Confirmar registro</MudButton>
                        <MudButton Href="/login">Já tenho uma conta</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>

